
@model IEnumerable<GestionPPM.Entidades.Modelo.ListadoCargaPTOP>

@{
    var acciones = (List<string>)ViewBag.AccionesUsuario;
}

@(Html
                .Grid(Model)
                .Build(columns =>
                {
                    columns.Add(model => model.Codigo).Titled("Id");
                    columns.Add(model => model.NombreComercio).Titled("Comercio");
                    columns.Add(model => model.RucCliente).Titled("RUC");
                    columns.Add(model => model.estado_comercio).Titled("Estado");
                    columns.Add(model => model.fecha_salida_produccion).Titled("Fecha Salida Producción");
                    columns.Add(model => model.NombrePlan).Titled("Plan");
                    columns.Add(model => model.Agrupacion).Titled("Agrupación");
                    columns.Add(model => model.Mes).Titled("Mes");
                    columns.Add(model => model.Anio).Titled("Año");
                    columns.Add(model => model.Detalle).Titled("Detalle");
                    columns.Add(model => model.ValorCertificacion).Titled("Valor Certificación");
                    columns.Add(model => model.TransaccionesAprobadas).Titled("Trx. Aprobadas");
                    columns.Add(model => model.MontoVendido).Titled("Monto Aprobado");
                    columns.Add(model => "<button style='background-color:#00AD8E;border-color: #00AD8E;' class='btn btn-success " + Auxiliares.GestionBontonesGrid(acciones, "ACCIONES-SIST-01-ACTUALIZAR") + "' onclick='location.href=\"" + @Url.Action("Edit", "CargaPTOP", new { id = model.Codigo }) + "\"' id='editar' data-id=\"" + model.Codigo + "\"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></button>" +
                    "<button onclick='ConfirmarEliminacion_(" + model.Codigo + ",\"" + @Url.Action("Eliminar", "CargaPTOP") + "\");' style='background-color:#FF5E00;border-color:#FF5E00;' class='btn btn-danger " + Auxiliares.GestionBontonesGrid(acciones, "ACCIONES-SIST-01-ELIMINAR") + "' id='eliminar' data-id=\"" + model.Codigo + "\"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>").Encoded(false);
                })
                .Empty(Mensajes.MensajeNoDataListado)
                .Id("grid-CargaPTOP")
                .Pageable(pager =>
                {
                    pager.PagesToDisplay = 5;
                    pager.RowsPerPage = 10;
                })
                .Filterable()
                .Sortable())
