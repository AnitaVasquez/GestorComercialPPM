
@model IEnumerable<GestionPPM.Entidades.Modelo.ListadoContacto>
@{
    var acciones = (List<string>)ViewBag.AccionesUsuario;
}
@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Id).Titled("Id");
            columns.Add(model => model.Usuario).Titled("Usuario");
            columns.Add(model => model.Cliente).Titled("Cliente");
            columns.Add(model => model.TipoContacto).Titled("Tipo Contacto");
            columns.Add(model => model.NombresCompletos).Titled("Nombres Completos");
            columns.Add(model => model.Cargo).Titled("Cargo");
            columns.Add(model => model.Mail).Titled("Mail");
            columns.Add(model => model.Prefijo).Titled("Prefijo");
            columns.Add(model => model.Telefono).Titled("Teléfono");
            columns.Add(model => model.Extension).Titled("Extensión");
            columns.Add(model => model.Celular).Titled("Celular");
            columns.Add(model => model.Estado).Titled("Estado");
            columns.Add(model => "<button style='background-color:#00AD8E;border-color: #00AD8E;' class='btn btn-success " + Auxiliares.GestionBontonesGrid(acciones, "ACCIONES-SIST-01-ACTUALIZAR") + "' onclick='location.href=\"" + @Url.Action("Edit", "ContactoCliente", new { id = model.Id }) + "\"' id='editar' data-id=\"" + model.Id + "\"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></button> " +
           "<button onclick='ConfirmarCambioEstado(" + model.Id + ",\"" + @Url.Action("Eliminar", "ContactoCliente") + "\",\"" + model.Estado + "\");' style='background-color:#FF5E00;border-color:#FF5E00;' class='btn btn-danger " + Auxiliares.GestionBontonesGrid(acciones, "ACCIONES-SIST-01-ELIMINAR") + "' id='eliminar' data-id=\"" + model.Id + "\"><span class='glyphicon glyphicon-random' aria-hidden='true'></span></button>").Encoded(false);
        })
        .Empty(Mensajes.MensajeNoDataListado)
        .Id("grid-ContactosClientes")
        .Pageable(pager =>
        {
            pager.PagesToDisplay = 5;
            pager.RowsPerPage = 10;
        })
        .Filterable()
        .Sortable())
