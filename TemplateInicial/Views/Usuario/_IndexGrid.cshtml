@model IEnumerable<GestionPPM.Entidades.Modelo.ListadoUsuarios>
@{
    var acciones = (List<string>)ViewBag.AccionesUsuario;
}

@(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Id).Titled("Id");
                columns.Add(model => model.Codigo).Titled("Código");
                columns.Add(model => model.Tipo_Usuario).Titled("Tipo Usuario");
                columns.Add(model => model.Nombres_Completos).Titled("Nombres Completos");
                columns.Add(model => model.Cliente_Asociado).Titled("Cliente Asociado");
                columns.Add(model => model.Area_o_Departamento).Titled("Área o Departamento");
                columns.Add(model => model.Cargo).Titled("Cargo");
                columns.Add(model => model.País).Titled("País");
                columns.Add(model => model.Ciudad).Titled("Ciudad");
                columns.Add(model => model.Direccion).Titled("Dirección");
                columns.Add(model => model.Mail).Titled("Mail");
                columns.Add(model => model.Telefono).Titled("Teléfono");
                columns.Add(model => model.Celular).Titled("Celular");
                columns.Add(model => model.Rol).Titled("Rol");
                columns.Add(model => model.Codigo_Vendedor).Titled("Código Vendedor");
                columns.Add(model => model.Estado).Titled("Estado");
                columns.Add(model => "<button style='background-color:#00AD8E;border-color: #00AD8E;' class='btn btn-success " + Auxiliares.GestionBontonesGrid(acciones, "ACCIONES-SIST-01-ACTUALIZAR") + "' onclick='location.href=\"" + @Url.Action("Edit", "Usuario", new { id = model.Id }) + "\"' id='editar' data-id=\"" + model.Id + "\"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></button> " +
                "<button onclick='ConfirmarCambioEstado(" + model.Id + ",\"" + @Url.Action("Eliminar", "Usuario") + "\",\"" + model.Estado + "\");' style='background-color:#FF5E00;border-color:#FF5E00;' class='btn btn-danger " + Auxiliares.GestionBontonesGrid(acciones, "ACCIONES-SIST-01-ELIMINAR") + "' id='eliminar' data-id=\"" + model.Id + "\"><span class='glyphicon glyphicon-random' aria-hidden='true'></span></button>").Encoded(false);
            })
            .Empty(Mensajes.MensajeNoDataListado)
            .Id("grid-Usuarios")
            .Pageable(pager =>
            {
                pager.PagesToDisplay = 5;
                pager.RowsPerPage = 10;
            })
            .Filterable()
            .Sortable())
