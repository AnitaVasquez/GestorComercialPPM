<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">Temas o Puntos a tratar <span class="requerido"> *</span></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button> 
            </div>
        </div>
        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table" id="tbl-Temas">
                        <thead>
                            <tr>
                                <th data-override="IDDetalleActaTemasTratar">ID</th>
                                <th data-override="Tema">Tema</th>
                                <th data-override="Responsable">Responsables</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateTemas">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDDetalleActaTemasTratar[]" /></td>
                                <td style="width:60%"><input type="text" class="form-control" placeholder="Tema" name="Tema[]" maxlength="250" /></td>
                                <td style="width:40%"><input type="text" class="form-control" placeholder="Responsable" name="Responsable[]" maxlength="250" /></td>
                                <td id="accion"><button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button></td>
                            </tr>
                            @foreach (var item in ViewBag.ListadoDetalleTemas)
                            {
                                <tr id="templateTemas-@item.IDDetalleActaTemasTratar">
                                    <td><input type="text" class="form-control" value="@item.IDDetalleActaTemasTratar" name="IDDetalleActaTemasTratar[]" /></td>
                                    <td style="width:60%"><input type="text" class="form-control" value="@item.Tema" placeholder="Tema" name="Tema[]" maxlength="250" /></td>
                                    <td style="width:40%"><input type="text" class="form-control" value="@item.Responsable" placeholder="Responsable" name="Responsable[]" maxlength="250" /></td>
                                    <td id="accion"><button type="button" onclick="eliminarFila(this.id)" id="eliminar-@item.IDDetalleActaTemasTratar" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
