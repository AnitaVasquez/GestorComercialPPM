<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">Condiciones Generales <span class="requerido"> *</span></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button> 
            </div>
        </div>
        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table" id="tbl-CondicionesGenerales">
                        <thead>
                            <tr>
                                <th data-override="IDActaCondicionesGenerales">ID</th>
                                <th data-override="Condicion">Descripción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateCondiciones">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDDetalleActaCondicionesGenerales[]" /></td>
                                <td style="width:100%"><input type="text" class="form-control" placeholder="Descripción" name="DescripcionCondicion[]" maxlength="500" /></td>
                                <td id="accion"><button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button></td>
                            </tr>
                            @foreach (var item in ViewBag.ListadoDetalleCondiciones)
                            {
                                <tr id="templateCondiciones-@item.IDActaCondicionesGenerales">
                                    <td><input type="text" class="form-control" value="@item.IDActaCondicionesGenerales"  name="IDDetalleActaCondicionesGenerales[]"/></td>
                                    <td style="width:100%"><input type="text" class="form-control" value="@item.Condicion" placeholder="Descripción" name="DescripcionCondicion[]" maxlength="500" /></td>
                                    <td id="accion"><button type="button" onclick="eliminarFila(this.id)" id="eliminar-@item.IDActaCondicionesGenerales" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
