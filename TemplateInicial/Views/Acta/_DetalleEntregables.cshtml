<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">Entregables <span class="requerido"> *</span></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button> 
            </div>
        </div>
        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table" id="tbl-Entregables">
                        <thead>
                            <tr>
                                <th data-override="IDDetalleActaEntregables">ID</th>
                                <th data-override="Entregable">Entregable</th>
                                <th data-override="Tipo">Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateEntregables">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDDetalleActaEntregables[]" /></td>
                                <td style="width:60%"><input type="text" class="form-control" placeholder="Descripción" name="Entregable[]" maxlength="300" /></td>
                                <td style="width:40%"><input type="text" class="form-control" placeholder="Tipo" name="Tipo[]" maxlength="150" /></td>
                                <td id="accion"><button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button></td>
                            </tr>
                            @foreach (var item in ViewBag.ListadoDetalleEntregables)
                            {
                                <tr id="templateEntregables-@item.IDDetalleActaEntregables">
                                    <td><input type="text" class="form-control" value="@item.IDDetalleActaEntregables" name="IDDetalleActaEntregables[]" /></td>
                                    <td style="width:60%"><input type="text" class="form-control" value="@item.Entregable" placeholder="Descripción" name="Entregable[]" maxlength="300" /></td>
                                    <td style="width:40%"><input type="text" class="form-control" value="@item.Tipo" placeholder="Tipo" name="Tipo[]" maxlength="150" /></td>
                                    <td id="accion"><button type="button"  onclick="eliminarFila(this.id)" id="eliminarEntregables-@item.IDDetalleActaEntregables" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
