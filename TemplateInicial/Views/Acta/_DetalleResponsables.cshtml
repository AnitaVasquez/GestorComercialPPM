<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">Responsables del Cliente <span class="requerido"> *</span></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button> 
            </div>
        </div>
        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table" id="tbl-ResponsablesCliente">
                        <thead>
                            <tr>
                                <th data-override="IDDetalleActaResponsablesCliente">ID</th>
                                <th data-override="Nombres">Nombres</th>
                                <th data-override="Empresa">Empresa</th>
                                <th data-override="Rol">Rol</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateResponsablesCliente">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDDetalleActaResponsablesCliente[]" /></td>
                                <td style="width:33.3%"><input type="text" class="form-control" placeholder="Nombres y Apellidos" name="Nombres[]" maxlength="250" /></td>
                                <td style="width:33.3%"><input type="text" class="form-control" placeholder="Empresa" name="Empresa[]" maxlength="200" /></td>
                                <td style="width:33.3%"><input type="text" class="form-control" placeholder="Rol" name="Rol[]" maxlength="200" /></td>
                                <td id="accion"><button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button></td>
                            </tr>
                            @foreach (var item in ViewBag.ListadoDetalleResponsables)
                            {
                                <tr id="templateResponsablesCliente-@item.IDDetalleActaResponsablesCliente">
                                    <td><input type="text" class="form-control" value="@item.IDDetalleActaResponsablesCliente" name="IDDetalleActaResponsablesCliente[]" /></td>
                                    <td style="width:33.3%"><input type="text" value="@item.Nombres" class="form-control" placeholder="Nombres y Apellidos" name="Nombres[]" maxlength="250" /></td>
                                    <td style="width:33.3%"><input type="text" class="form-control" value="@item.Empresa" placeholder="Empresa" name="Empresa[]" maxlength="200" /></td>
                                    <td style="width:33.3%"><input type="text" class="form-control" value="@item.Rol" placeholder="Rol" name="Rol[]" maxlength="200" /></td>
                                    <td id="accion"><button type="button" onclick="eliminarFila(this.id)" id="eliminar-@item.IDDetalleActaResponsablesCliente" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
