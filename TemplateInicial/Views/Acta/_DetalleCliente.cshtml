@using GestionPPM.Entidades.Modelo
@using GestionPPM.Entidades.Metodos
<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">@ViewBag.TituloPanelDetalle <span class="requerido"> *</span></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table" id="tbl-Cliente">
                        <thead>
                            <tr>
                                <th data-override="IDDetalleActaCliente">ID</th>
                                <th data-override="id_facturacion_safi">Prefactura SAFI</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateCliente">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDDetalleActaCliente[]" /></td>
                                <td style="width:100%">
                                    @Html.DropDownList("id_facturacion_safi", (List<SelectListItem>)CotizacionEntity.ListadoSeleccionPrefacturaSAFI(ViewBag.ListadoPrefacturas, null, ViewBag.nuevo, true), Etiquetas.TituloComboVacio, new { @class = "form-control seleccion" })
                                </td>
                                <td style="padding-top: 13px;">

                                    <span>
                                        <a class="informacion-prefactura" style="cursor: pointer" title="Ver detalles." @*data-backdrop="static" data-toggle="modal" data-target="#contenido-modal" *@> <i class="fa fa-info" aria-hidden="true"></i></a>
                                    </span>
                                </td>
                                <td id="accion">
                                    <button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                </td>
                            </tr>
                            @foreach (var item in ViewBag.ListadoDetalleCliente)
                            {
                            <tr id="templateCliente-@item.IDDetalleActaCliente">
                                <td>
                                    <input type="text" class="form-control" value="@item.IDDetalleActaCliente" name="IDDetalleActaCondicionesGenerales[]" />
                                </td>
                                <td style="width:100%">
                                    @Html.DropDownList("id_facturacion_safi[]", (List<SelectListItem>)CotizacionEntity.ListadoSeleccionPrefacturaSAFI(ViewBag.ListadoPrefacturas, item.id_facturacion_safi.ToString(), ViewBag.nuevo, true), new { @class = "form-control" })
                                </td>

                                <td style="padding-top: 13px;">

                                    <span>
                                        <a class="informacion-prefactura" style="cursor: pointer" title="Ver detalles." @*data-backdrop="static" data-toggle="modal" data-target="#contenido-modal" *@> <i class="fa fa-info" aria-hidden="true"></i></a>
                                    </span>


                                </td>

                                <td id="accion"><button type="button" onclick="eliminarFila(this.id)" id="eliminar-@item.IDDetalleActaCliente" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
